{% extends 'base.html.twig' %}

{% block body %}
    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-heading">Organic Ingredients<br />Instant Delivery*</div>
                <a href="#pizzatypes" class="page-scroll btn btn-xl">Order a Pizza</a>
            </div>
            <p class="text-muted">* Imaginary pizzas will arrive instantaneously</p>
        </div>
    </header>
    <!-- /Header -->


    <!-- Team -->
    <section id="team" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">The Pizza Masters</h2>
                    <h3 class="section-subheading text-muted">Our incredible chefs come from around the world to hand-craft the best pizza you have ever tasted.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="team-member">
                        <img src="{{ asset('img/team/1.jpg') }}" class="img-responsive img-thumbnail" alt="">
                        <h4>Gordon Ramsay</h4>
                        <p class="text-muted">Pizza Chef</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img src="{{ asset('img/team/2.jpg') }}" class="img-responsive img-thumbnail" alt="">
                        <h4>Michael Simmons<br>Markee Hall</h4>
                        <p class="text-muted">Chief Pizza Executives</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <img src="{{ asset('img/team/3.jpg') }}" class="img-responsive img-thumbnail" alt="">
                        <h4>Diana Pertersen</h4>
                        <p class="text-muted">Pizza Chef</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">Together we are an unstoppable pizza force.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- /Team -->

{% endblock %}
