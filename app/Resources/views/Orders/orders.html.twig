{% extends "::base.html.twig" %}

{% block title %}Pizza Orders{% endblock %}

{% block body %}
<div class="container page-container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Pizza Orders</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped">
                <tr>
                    <th class="col-xs-1">Order</th>
                    <th class="col-xs-3">Pizza Style</th>
                    <th class="col-xs-2">Status</th>
                </tr>
                {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.pizzaVariety }}</td>
                    <td>{{ order.status }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
